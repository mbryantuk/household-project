{
  "openapi": "3.0.0",
  "info": {
    "title": "Household Manager API",
    "version": "1.3.0",
    "description": "Multi-tenant household management API with Asset-First approach and Financial Integration.",
    "contact": {
      "name": "DevOps Engineer"
    }
  },
  "servers": [
    { "url": "http://localhost:4001" }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "RecurringCost": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" },
          "amount": { "type": "number" },
          "frequency": { "type": "string" },
          "payment_day": { "type": "integer" },
          "nearest_working_day": { "type": "boolean" },
          "category": { "type": "string" }
        }
      },
      "Vehicle": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "make": { "type": "string" },
          "model": { "type": "string" },
          "registration": { "type": "string" },
          "year": { "type": "integer" },
          "mot_due": { "type": "string" },
          "tax_due": { "type": "string" }
        }
      },
      "Asset": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" },
          "category": { "type": "string" },
          "purchase_date": { "type": "string" },
          "warranty_expiry": { "type": "string" }
        }
      }
    }
  },
  "security": [{ "bearerAuth": [] }],
  "paths": {
    "/auth/login": {
      "post": {
        "summary": "Login to a household",
        "tags": ["Auth"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["username", "password", "accessKey"],
                "properties": {
                  "username": { "type": "string" },
                  "password": { "type": "string" },
                  "accessKey": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/households/{id}/vehicles": {
      "get": {
        "summary": "List all vehicles",
        "tags": ["Assets"],
        "parameters": [{ "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }],
        "responses": { "200": { "description": "OK" } }
      },
      "post": {
        "summary": "Create a vehicle",
        "tags": ["Assets"],
        "parameters": [{ "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }],
        "requestBody": {
          "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Vehicle" } } }
        },
        "responses": { "200": { "description": "Created" } }
      }
    },
    "/households/{id}/assets": {
      "get": {
        "summary": "List all assets",
        "tags": ["Assets"],
        "parameters": [{ "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }],
        "responses": { "200": { "description": "OK" } }
      },
      "post": {
        "summary": "Create an asset",
        "tags": ["Assets"],
        "parameters": [{ "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }],
        "requestBody": {
          "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Asset" } } }
        },
        "responses": { "200": { "description": "Created" } }
      }
    },
    "/households/{id}/energy": {
      "get": {
        "summary": "List energy accounts",
        "tags": ["Assets"],
        "parameters": [{ "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }],
        "responses": { "200": { "description": "OK" } }
      }
    }
  }
}