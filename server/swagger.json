{
  "openapi": "3.0.0",
  "info": {
    "title": "Household Manager API",
    "version": "1.2.0",
    "description": "Multi-tenant household management API with Asset-First approach and Financial Integration.",
    "contact": {
      "name": "DevOps Engineer"
    }
  },
  "servers": [
    { "url": "http://localhost:4001" }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "RecurringCost": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" },
          "amount": { "type": "number" },
          "frequency": { "type": "string" },
          "payment_day": { "type": "integer" },
          "nearest_working_day": { "type": "boolean" },
          "category": { "type": "string" }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "username": { "type": "string" },
          "first_name": { "type": "string" },
          "last_name": { "type": "string" },
          "email": { "type": "string" },
          "avatar": { "type": "string" },
          "role": { "type": "string" }
        }
      }
    }
  },
  "security": [{ "bearerAuth": [] }],
  "paths": {
    "/auth/login": {
      "post": {
        "summary": "Login to a household",
        "tags": ["Auth"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["username", "password", "accessKey"],
                "properties": {
                  "username": { "type": "string" },
                  "password": { "type": "string" },
                  "accessKey": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/households/{id}/dates": {
      "get": {
        "summary": "Get expanded calendar dates (including recurring costs and holidays)",
        "tags": ["Calendar"],
        "parameters": [{ "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }],
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/households/{id}/costs": {
      "post": {
        "summary": "Create recurring cost",
        "tags": ["Finance"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/RecurringCost" }
            }
          }
        },
        "responses": { "200": { "description": "Created" } }
      }
    }
  }
}