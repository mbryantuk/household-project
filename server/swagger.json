{
  "openapi": "3.0.0",
  "info": {
    "title": "Household Manager API",
    "version": "1.0.0",
    "description": "Multi-tenant household management API with full module support for Vehicles, Assets, Energy, and more.",
    "contact": {
      "name": "Product Manager"
    }
  },
  "servers": [
    { "url": "http://localhost:4001" }
  ],
  "components": {
    "schemas": {
      "Date": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "title": { "type": "string" },
          "date": { "type": "string", "format": "date" },
          "end_date": { "type": "string", "format": "date-time" },
          "is_all_day": { "type": "boolean" },
          "type": { "type": "string" },
          "description": { "type": "string" },
          "emoji": { "type": "string" },
          "recurrence": { "type": "string", "enum": ["none", "daily", "weekly", "monthly", "yearly"] },
          "recurrence_end_date": { "type": "string", "format": "date-time" }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "security": [{ "bearerAuth": [] }],
  "paths": {
    "/auth/login": {
      "post": {
        "summary": "Login to get a JWT token",
        "tags": ["Auth"],
        "security": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["username", "password"],
                "properties": {
                  "username": { "type": "string" },
                  "password": { "type": "string" },
                  "accessKey": { "type": "string", "description": "Required for household-level login" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Login successful" }
        }
      }
    },
    "/households/{id}/vehicles": {
      "get": {
        "summary": "List all vehicles",
        "tags": ["Vehicles"],
        "parameters": [{ "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }],
        "responses": { "200": { "description": "List of vehicles" } }
      },
      "post": {
        "summary": "Create a vehicle (Admin Only)",
        "tags": ["Vehicles"],
        "parameters": [{ "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }],
        "responses": { "200": { "description": "Vehicle created" }, "403": { "description": "Forbidden" } }
      }
    },
    "/households/{id}/vehicles/{itemId}": {
      "get": {
        "summary": "Get vehicle details",
        "tags": ["Vehicles"],
        "parameters": [
          { "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } },
          { "in": "path", "name": "itemId", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": { "200": { "description": "Vehicle details" }, "404": { "description": "Not found" } }
      },
      "put": {
        "summary": "Update a vehicle (Admin Only)",
        "tags": ["Vehicles"],
        "parameters": [
          { "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } },
          { "in": "path", "name": "itemId", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": { "200": { "description": "Updated" }, "403": { "description": "Forbidden" } }
      },
      "delete": {
        "summary": "Delete a vehicle (Admin Only)",
        "tags": ["Vehicles"],
        "parameters": [
          { "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } },
          { "in": "path", "name": "itemId", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": { "200": { "description": "Deleted" }, "403": { "description": "Forbidden" } }
      }
    },
    "/households/{id}/assets": {
      "get": {
        "summary": "List all assets",
        "tags": ["Assets"],
        "parameters": [{ "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }],
        "responses": { "200": { "description": "List of assets" } }
      },
      "post": {
        "summary": "Create an asset (Admin Only)",
        "tags": ["Assets"],
        "parameters": [{ "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }],
        "responses": { "200": { "description": "Asset created" }, "403": { "description": "Forbidden" } }
      }
    },
    "/households/{id}/energy": {
      "get": {
        "summary": "List energy accounts",
        "tags": ["Energy"],
        "parameters": [{ "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }],
        "responses": { "200": { "description": "List of accounts" } }
      },
      "post": {
        "summary": "Create energy account (Admin Only)",
        "tags": ["Energy"],
        "parameters": [{ "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }],
        "responses": { "200": { "description": "Created" }, "403": { "description": "Forbidden" } }
      }
    },
    "/households/{id}/details": {
      "get": {
        "summary": "Get house details (Singleton)",
        "tags": ["Details"],
        "parameters": [{ "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }],
        "responses": { "200": { "description": "Details" } }
      },
      "put": {
        "summary": "Update house details (Admin Only)",
        "tags": ["Details"],
        "parameters": [{ "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }],
        "responses": { "200": { "description": "Updated" }, "403": { "description": "Forbidden" } }
      }
    }
  }
}
