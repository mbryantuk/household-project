{
  "openapi": "3.0.0",
  "info": {
    "title": "Totem Household SaaS API",
    "version": "3.1.3",
    "description": "Multi-tenant household management API with strict data isolation and RBAC. Consolidated Recurring Costs.",
    "contact": {
      "name": "Lead Architect"
    }
  },
  "servers": [
    {
      "url": "/api"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Household": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" }
        }
      },
      "RecurringCost": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "object_type": { "type": "string", "enum": ["household", "member", "vehicle", "asset", "pet"] },
          "object_id": { "type": "integer" },
          "category_id": { "type": "string" },
          "name": { "type": "string" },
          "amount": { "type": "number" },
          "frequency": { "type": "string" },
          "start_date": { "type": "string", "format": "date" },
          "day_of_month": { "type": "integer" },
          "emoji": { "type": "string" },
          "metadata": { "type": "object" }
        }
      },
      "Member": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "first_name": { "type": "string" },
          "last_name": { "type": "string" },
          "type": { "type": "string", "enum": ["adult", "child", "pet"] },
          "emoji": { "type": "string" }
        }
      },
      "Chore": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" },
          "frequency": { "type": "string" },
          "value": { "type": "number" },
          "next_due_date": { "type": "string", "format": "date" },
          "assigned_member_id": { "type": "integer" }
        }
      }
    }
  },
  "security": [{ "bearerAuth": [] }],
