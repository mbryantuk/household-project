{
  "openapi": "3.0.0",
  "info": {
    "title": "Household Manager API",
    "version": "1.1.0",
    "description": "Multi-tenant household management API with Asset-First approach and Financial Integration.",
    "contact": {
      "name": "DevOps Engineer"
    }
  },
  "servers": [
    { "url": "http://localhost:4001" }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "FinancialAsset": {
        "type": "object",
        "properties": {
          "purchase_value": { "type": "number" },
          "replacement_cost": { "type": "number" },
          "monthly_maintenance_cost": { "type": "number" },
          "depreciation_rate": { "type": "number" }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "username": { "type": "string" },
          "first_name": { "type": "string" },
          "last_name": { "type": "string" },
          "email": { "type": "string" },
          "avatar": { "type": "string" },
          "role": { "type": "string" }
        }
      }
    }
  },
  "security": [{ "bearerAuth": [] }],
  "paths": {
    "/auth/login": {
      "post": {
        "summary": "Login to a household",
        "tags": ["Auth"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["username", "password", "accessKey"],
                "properties": {
                  "username": { "type": "string" },
                  "password": { "type": "string" },
                  "accessKey": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/admin/users": {
      "get": {
        "summary": "List all users (SysAdmin only)",
        "tags": ["Admin"],
        "responses": {
          "200": {
            "description": "OK",
            "content": { "application/json": { "schema": { "type": "array", "items": { "$ref": "#/components/schemas/User" } } } }
          }
        }
      }
    },
    "/admin/create-user": {
      "post": {
        "summary": "Create a new user (Admin/SysAdmin only)",
        "tags": ["Admin"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["username", "password"],
                "properties": {
                  "username": { "type": "string" },
                  "password": { "type": "string" },
                  "first_name": { "type": "string" },
                  "last_name": { "type": "string" },
                  "email": { "type": "string" },
                  "avatar": { "type": "string" },
                  "role": { "type": "string" },
                  "householdId": { "type": "integer" }
                }
              }
            }
          }
        },
        "responses": { "200": { "description": "Created" } }
      }
    },
    "/households/{id}": {
      "get": {
        "summary": "Get household details",
        "tags": ["Households"],
        "parameters": [{ "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }],
        "responses": { "200": { "description": "OK" } }
      },
      "put": {
        "summary": "Update household details (Admin only)",
        "tags": ["Households"],
        "parameters": [{ "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "avatar": { "type": "string" },
                  "address_street": { "type": "string" },
                  "address_city": { "type": "string" },
                  "address_zip": { "type": "string" },
                  "auto_backup": { "type": "boolean" },
                  "backup_retention": { "type": "integer" }
                }
              }
            }
          }
        },
        "responses": { "200": { "description": "Updated" }, "403": { "description": "Forbidden" } }
      }
    }
  }
}