{
  "openapi": "3.0.0",
  "info": {
    "title": "Household Manager API",
    "version": "1.1.0",
    "description": "Multi-tenant household management API with Asset-First approach and Financial Integration.",
    "contact": {
      "name": "DevOps Engineer"
    }
  },
  "servers": [
    { "url": "http://localhost:4001" }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "FinancialAsset": {
        "type": "object",
        "properties": {
          "purchase_value": { "type": "number" },
          "replacement_cost": { "type": "number" },
          "monthly_maintenance_cost": { "type": "number" },
          "depreciation_rate": { "type": "number" }
        }
      }
    }
  },
  "security": [{ "bearerAuth": [] }],
  "paths": {
    "/auth/login": {
      "post": {
        "summary": "Login to a household",
        "tags": ["Auth"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["username", "password", "accessKey"],
                "properties": {
                  "username": { "type": "string" },
                  "password": { "type": "string" },
                  "accessKey": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/households/{id}/vehicles": {
      "get": {
        "summary": "List household vehicles (Tenant isolated)",
        "tags": ["Vehicles"],
        "parameters": [{ "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }],
        "responses": { "200": { "description": "OK" } }
      },
      "post": {
        "summary": "Create vehicle (Admin only)",
        "tags": ["Vehicles"],
        "responses": { "200": { "description": "Created" }, "403": { "description": "Forbidden" } }
      }
    },
    "/households/{id}/vehicles/{vehicleId}/services": {
      "get": {
        "summary": "Get service history for a vehicle",
        "tags": ["Vehicles"],
        "parameters": [
          { "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } },
          { "in": "path", "name": "vehicleId", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/households/{id}/waste": {
      "get": {
        "summary": "List waste collection schedules",
        "tags": ["Waste"],
        "responses": { "200": { "description": "OK" } }
      },
      "post": {
        "summary": "Add collection schedule",
        "tags": ["Waste"],
        "responses": { "200": { "description": "Created" } }
      }
    },
    "/households/{id}/assets": {
      "get": {
        "summary": "List appliances and assets with financial data",
        "tags": ["Assets"],
        "responses": { "200": { "description": "OK" } }
      }
    }
  }
}