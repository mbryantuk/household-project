{
  "openapi": "3.0.0",
  "info": {
    "title": "Totem Household SaaS API",
    "version": "3.1.2",
    "description": "Multi-tenant household management API with strict data isolation and RBAC. Consolidated Recurring Costs.",
    "contact": {
      "name": "Lead Architect"
    }
  },
  "servers": [
    {
      "url": "/api"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Household": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" }
        }
      },
      "RecurringCost": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "object_type": { "type": "string", "enum": ["household", "member", "vehicle", "asset", "pet"] },
          "object_id": { "type": "integer" },
          "category_id": { "type": "string" },
          "name": { "type": "string" },
          "amount": { "type": "number" },
          "frequency": { "type": "string" },
          "start_date": { "type": "string", "format": "date" },
          "emoji": { "type": "string" },
          "metadata": { "type": "string", "description": "JSON string" }
        }
      }
    }
  },
  "security": [{ "bearerAuth": [] }],
  "paths": {
    "/auth/register": { "post": { "tags": ["Auth"], "responses": { "201": { "description": "Created" } } } },
    "/auth/login": { "post": { "tags": ["Auth"], "responses": { "200": { "description": "OK" } } } },
    "/auth/profile": { "get": { "tags": ["Auth"], "responses": { "200": { "description": "OK" } } }, "put": { "tags": ["Auth"], "responses": { "200": { "description": "OK" } } } },
    "/households": { "post": { "tags": ["Households"], "responses": { "201": { "description": "Created" } } } },
    "/households/{id}": { 
        "get": { "tags": ["Households"], "parameters": [{ "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }], "responses": { "200": { "description": "OK" } } },
        "put": { "tags": ["Households"], "parameters": [{ "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }], "responses": { "200": { "description": "OK" } } }
    },
    "/households/{id}/members": { 
        "get": { "tags": ["Members"], "parameters": [{ "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }], "responses": { "200": { "description": "OK" } } },
        "post": { "tags": ["Members"], "parameters": [{ "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }], "responses": { "201": { "description": "Created" } } }
    },
    "/households/{id}/vehicles": { 
        "get": { "tags": ["Assets"], "parameters": [{ "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }], "responses": { "200": { "description": "OK" } } },
        "post": { "tags": ["Assets"], "parameters": [{ "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }], "responses": { "201": { "description": "Created" } } }
    },
    "/households/{id}/finance/recurring-costs": {
      "get": { "tags": ["Finance"], "parameters": [{ "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }], "responses": { "200": { "description": "OK" } } },
      "post": { "tags": ["Finance"], "parameters": [{ "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }], "responses": { "201": { "description": "Created" } } }
    },
    "/households/{id}/finance/recurring-costs/{itemId}": {
      "put": { "tags": ["Finance"], "parameters": [{ "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }, { "in": "path", "name": "itemId", "required": true, "schema": { "type": "integer" } }], "responses": { "200": { "description": "OK" } } },
      "delete": { "tags": ["Finance"], "parameters": [{ "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }, { "in": "path", "name": "itemId", "required": true, "schema": { "type": "integer" } }], "responses": { "200": { "description": "OK" } } }
    },
    "/households/{id}/finance/income": { 
        "get": { "tags": ["Finance"], "parameters": [{ "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }], "responses": { "200": { "description": "OK" } } },
        "post": { "tags": ["Finance"], "parameters": [{ "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }], "responses": { "201": { "description": "Created" } } }
    },
    "/households/{id}/finance/credit-cards": { "get": { "tags": ["Finance"], "responses": { "200": { "description": "OK" } } } },
    "/households/{id}/finance/investments": { "get": { "tags": ["Finance"], "responses": { "200": { "description": "OK" } } } },
    "/households/{id}/finance/pensions": { "get": { "tags": ["Finance"], "responses": { "200": { "description": "OK" } } } },
    "/households/{id}/finance/savings": { "get": { "tags": ["Finance"], "responses": { "200": { "description": "OK" } } } },
    "/households/{id}/meals": { "get": { "tags": ["Meals"], "responses": { "200": { "description": "OK" } } } }
  }
}