{
  "name": "household-manager",
  "version": "1.0.40",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node server.js",
    "test": "jest --detectOpenHandles --forceExit",
    "test:full": "jest --detectOpenHandles --forceExit --verbose",
    "test:perf": "jest server/tests/performance.test.js --detectOpenHandles --forceExit",
    "test:report": "jest --detectOpenHandles --forceExit --ci --runInBand --reporters=default --reporters=jest-html-reporter"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@scalar/express-api-reference$": "<rootDir>/tests/scalar-mock.js"
    },
    "reporters": [
      "default",
      [
        "jest-html-reporter",
        {
          "pageTitle": "Master Test Report",
          "outputPath": "./test-report.html",
          "includeFailureMsg": true
        }
      ]
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@scalar/express-api-reference": "^0.8.32",
    "adm-zip": "^0.5.16",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "expo": "^54.0.30",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "axios": "^1.13.2",
    "jest": "^30.2.0",
    "jest-html-reporter": "^4.3.0",
    "supertest": "^7.1.4"
